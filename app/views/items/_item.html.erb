              <li class='list'>

        <%= link_to  item_path(item.id) do %>
        <div class='item-img-content'>

        <%= image_tag item.image, class: "item-img" %>

<% if item.order != nil%>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <% end %>


        </div>
        <div class='item-info'>
          <h3 class='item-name'>
          <%= item.name  %>
          </h3>
          <div class='item-price'>
                      <span><%= item.price %>å††<br><%= item.delivery_price.name %></span>
            <div class='star-btn'>

        <%if  user_signed_in? && current_user.likes.where(item_id: item.id).exists? == true %>
              <%= image_tag "hoshi.png", class:"star-icon" %>
              <% else %>          
              <%= image_tag "star.png", class:"star-icon" %>
              <% end %>
              <span class='star-count'><%= item.likes.count%></span>

            </div>
          </div>
        </div>
        <% end %>
              </li>

